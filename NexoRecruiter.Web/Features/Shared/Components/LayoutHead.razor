@implements IDisposable

@code {
    [CascadingParameter]
    public ILayoutHeadHost? Layout { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    protected override void OnParametersSet()
    {
        Layout?.SetPageHead(ChildContent);
    }

    public void Dispose()
    {
        Layout?.ClearPageHead();
    }
}