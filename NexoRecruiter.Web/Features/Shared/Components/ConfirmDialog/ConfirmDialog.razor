<MudDialog>
    <DialogContent>
        <MudText Class="p-2" Typo="Typo.h6">@Title</MudText>
        <MudStack Row Spacing="2" Justify="Justify.Center" AlignItems="AlignItems.Center">
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">Ok</MudButton>
        </MudStack>
    </DialogContent>
</MudDialog>
