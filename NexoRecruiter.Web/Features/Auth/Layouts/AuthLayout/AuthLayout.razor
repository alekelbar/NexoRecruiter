@using NexoRecruiter.Web.Features.Shared.Components
@using NexoRecruiter.Web.Features.Shared.Components.AppShell
@implements ILayoutHeadHost
@inherits LayoutComponentBase

<CascadingValue Value="this" IsFixed>
    <HeadContent>
        @pageHead
    </HeadContent>

    <AppShell>
        <MudLayout>
            @Body
        </MudLayout>
    </AppShell>
</CascadingValue>

@code {

    private RenderFragment? pageHead;
    public void SetPageHead(RenderFragment? fragment)
    {
        pageHead = fragment;
        StateHasChanged();
    }

    public void ClearPageHead()
    {
        pageHead = null;
        StateHasChanged();
    }
}